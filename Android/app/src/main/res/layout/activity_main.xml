<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity"
    tools:layout_editor_absoluteY="50dp">

    <TextView
        android:id="@+id/temperature"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="220dp"
        android:layout_marginStart="32dp"
        android:drawableLeft="@mipmap/ic_temperature"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/humidity"
        app:layout_constraintVertical_bias="0.90" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="148dp"
        android:drawableLeft="@mipmap/ic_humidity"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.300"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/heatindex"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@mipmap/ic_wind"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/humidity"
        app:layout_constraintVertical_bias="0.90" />

    <!--///////////-->

    <TextView
        android:id="@+id/heartrate"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@mipmap/ic_heart"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>